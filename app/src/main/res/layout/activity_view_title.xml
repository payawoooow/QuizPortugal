<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewTitle">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="264dp"
        android:layout_height="36dp"
        android:layout_marginTop="132dp"
        android:text="ポルトガル語Quizアプリ"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textVersion"
        android:layout_width="67dp"
        android:layout_height="26dp"
        android:layout_marginTop="44dp"
        android:text="Ver1.0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textTitle"
        app:layout_constraintTop_toBottomOf="@+id/textTitle" />

    <TextView
        android:id="@+id/textDeveloper"
        android:layout_width="173dp"
        android:layout_height="33dp"
        android:layout_marginTop="304dp"
        android:text="Devepoler:tamuRa"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textVersion"
        app:layout_constraintTop_toBottomOf="@+id/textVersion" />
